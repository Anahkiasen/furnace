{% extends '_layouts/global.twig' %}
{% from '_macros/table.twig' import progress, boolean %}

{% block content %}
	<table class="table table-striped table-hover">
		<thead>
		<tr>
			<th>Artist</th>
			<th>Title</th>
			<th>Tracker</th>
			<th>Tuning</th>
			<th>DD</th>
			<th>Live</th>
			<th>Tone</th>
			<th>Track</th>
			<th>Tab</th>
			<th>Rating</th>
		</tr>
		</thead>
		<tbody>
		{% for track in tracks %}
			<tr>
				<td>{{ track.artist }}</td>
				<td>{{ track.name }}</td>
				<td>{{ track.tracker.name }}</td>
				<td>{{ track.tuning }}</td>
				<td>{{ boolean(track.dd) }}</td>
				<td>{{ boolean(track.live) }}</td>
				<td>
					{{ progress(track.tone, 3) }}
				</td>
				<td>
					{{ progress(track.track, 3) }}
				</td>
				<td>
					{{ progress(track.tab, 3) }}
				</td>
				<td>
					{{ progress(track.rating, 3, 'success') }}
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
